<%= form_with model: [ @article, @article.comments.build ] do |form| %>

    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1"> <%= form.label :commenter %></span>
      <input type="text" class="form-control" placeholder="" aria-label=<%= form.text_field :commenter %>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text" id="basic-addon1"> <%= form.label "Text" %></span>
      <textarea class="form-control" placeholder="" aria-label=<%= form.text_area :body%> 
    </div>

    <div>
      <%= form.label :status %><br>
      <%= form.select :status, ['public', 'private', 'archived'], {}, {class: "form-select", }%>
    </div>
    <br>
    <div>
      <%= form.submit "Create comment", class: "btn btn-success" %>
    </div>
  <% end %>